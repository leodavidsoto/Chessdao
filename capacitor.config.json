{
    "appId": "com.chessdao.app",
    "appName": "ChessDAO",
    "webDir": "out",
    "bundledWebRuntime": false,
    "server": {
        "cleartext": true,
        "androidScheme": "https"
    },
    "plugins": {
        "SplashScreen": {
            "launchShowDuration": 2000,
            "backgroundColor": "#020617",
            "showSpinner": true,
            "spinnerColor": "#2DE2E6",
            "androidScaleType": "CENTER_CROP"
        },
        "Keyboard": {
            "resize": "body",
            "style": "dark"
        }
    },
    "android": {
        "allowMixedContent": true,
        "backgroundColor": "#020617",
        "webContentsDebuggingEnabled": true
    }
}
